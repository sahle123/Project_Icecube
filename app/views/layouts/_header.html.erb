<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/home"><img width="88px" height="66px" src="/assets/icecubelogo.png">Project Ice Cube</a>
      
  <!-- Elements of the navigation bar, have the ability -->
  <!-- to collapse to a single button                   -->
      <nav class="nav-collapse">
        <ul class="nav pull-right">
          <li><%= link_to "Home", home_path %></li>
          <li><%= link_to "News", news_path %></li>
          <li><%= link_to 'Levels', levels_path %></li>
          <li><%= link_to 'Create Level', new_level_path %></li>
          <li class="divider-vertical"></li>
