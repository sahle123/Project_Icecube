<!-- Variables -->
<%show_nav_bar = true%>
<%show_signup_and_login = true%>

<!-- HTML code -->
<!DOCTYPE html>
<html>
	<head>
	  <title>Icecube</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
		<!-- id's, classes, and other styles that should be in a stylesheet -->
		<style>
			#nav_bar
			{
				margin-top: 40px;
				text-align: center;
			}
			li{
				display:inline;
				padding-left: 20px;
				padding-right: 20px;
				font-size: 18px;
			}
		</style>	

		<!-- Page information (i think) -->	
	</head>

	<!-- Display page -->
	<body>
		<!-- Navigation Bar with Bootstrap CSS -->
		<%if show_nav_bar%>
			<div class="navbar navbar-fixed-top navbar-inverse">
			    <div class="navbar-inner">
			      <div class="container">
			        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			          <span class="icon-bar"></span>
			          <span class="icon-bar"></span>
			          <span class="icon-bar"></span>
			        </a>
			        <a class="brand" href="#">Project Ice Cube</a>
			        <!-- login/signup from the naviagation nav_bar 	-->
					<%if show_signup_and_login%>
						<% if signed_in? %>
							<p style="float:right; margin-top:0">
								<%= current_user.user_name %>
								<%= link_to "Sign out", signout_path, method: 'delete' %>
							</p>
						<%else%>
							<p style="float:right; margin-top:0" >
								<%= link_to 'Sign In', signin_path %> / 
								<%= link_to 'Sign Up'	, signup_path %> 
							</p>
						<%end%>
					<%end%>
					<!-- Elements of the navigation bar, have the ability -->
					<!-- to collapse to a single button                   -->
			        <div class="nav-collapse">
			          <ul class="nav">
			            <li><%= link_to "News" %></li>
			            <li><%= link_to 'Levels', levels_path %></li>
			            <li><%= link_to 'Create Level', new_level_path %></li>
			          </ul>
			        </div>
			      </div>
			    </div>
			  </div>
		<%end%>
		<div class="container">
		    <div class="row">
		      <div class="span9"><%= yield %></div>
		      <div class="span3">
		      </div>
		    </div>
		</div>
		<!-- %= yield % -->
	</body>
</html>
