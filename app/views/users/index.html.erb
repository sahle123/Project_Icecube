<h1>Listing users</h1>

<table>
  <tr>
    <th>User name</th>
    <th>Email</th>
    <th>Join date</th>
    <th>Birth date</th>
    <th>Status</th>
    <th>Slogan</th>
    <th>Reputation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td><%= user.email %></td>
    <td><%= user.join_date %></td>
    <td><%= user.birth_date %></td>
    <td><%= user.status %></td>
    <td><%= user.slogan %></td>
    <td><%= user.reputation %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

